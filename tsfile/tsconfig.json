{
  "compilerOptions": {
    // ğŸ—‚ï¸ File structure
    "rootDir": "./src",
    "outDir": "./dist",

    // âš™ï¸ Target environment
    "target": "esnext",
    "module": "none",
    "sourceMap": false,
    "alwaysStrict": false,

    // ğŸ§¹ Clean output
    "removeComments": true,
    "declaration": false,
    "declarationMap": false,

    // âœ… TypeScript strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // âš¡ Performance & compatibility
    "skipLibCheck": true,

    // ğŸ’¡ React setup (optional)
    "jsx": "react-jsx"
  },

  // ğŸ‘‡ Ensure it compiles only what you want
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
